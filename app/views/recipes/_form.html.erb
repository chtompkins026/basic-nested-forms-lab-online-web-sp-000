<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
 
  <%= f.fields_for :ingredients do |ingredient| %>
    <%= ingredient.label :recipe_1 %>
    <%= ingredient.text_field :recipe_1 %><br>
 
    <%= ingredient.label :recipe_2 %>
    <%= ingredient.text_field :recipe_2 %><br>
 
    <%= ingredient.label :name %>
    <%= ingredient.text_field :name %><br>
 
    <%= ingredient.label :quantity %>
    <%= ingredient.text_field :quantity %><br>
 
  <% end %>
 
  <%= f.submit %>
<% end %>
